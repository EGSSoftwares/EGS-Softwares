        <title>Excluir Pet</title>
    </head>

    <body>
        <header>
            <nav>
                <a href="gerenciamento.html"> 
                    INICIO
                </a>
            </nav>
            <div class="conteiner">  
            <img src="imagens/logo.jpg" alt="logo Banho e Tosa">
            <h1>Excluir Pet</h1>
            </div>
        </header>

        <main>    
            <% for(let i=0; i< pets.length; i++){%>
                <table>
                    <tr>
                        <th> Nome </th>
                        <th> Raca </th>
                        <th> Peso </th>
                        <th> Especie </th>
                    <tr>
                        <td><%= pets[i].nomePet %></td>
                        <td><%= pets[i].Raca %></td>
                        <td><%= pets[i].Peso %></td>
                        <td><%= pets[i].especie %></td>
                        
                    </tr>
                </table>
            <% }%>
            <table>
                <th> Nome do dono </th>
                <th> CPF do dono </th>
                <th> Contato </th></th>
                <td><%= pessoa[0].nomePessoa %></td>
                <td><%= pessoa[0].CPF %></td>
                <td><%= pessoa[0].Numero %></td>
            </table>
            <div id="botao">
                <form action = "deletePet" method = "POST">
                    <input class="botao" type="submit" value="Confirmar">
                </form>
                <button class="botao" type="submit" formaction="controle_cliente.html" value="cancelar">Cancelar</button>
            </div>
        </main>
    </body>
</html>
